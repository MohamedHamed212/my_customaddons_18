<odoo>
    <template id="account_move_merge_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page" style="font-size:12px;">
                    <t t-foreach="docs" t-as="doc">
                        <!-- Title -->
                        <h2 style="text-align:center; font-size: 18px; margin-bottom: 15px;">
                            Merged Invoice Report
                        </h2>

                        <!-- Header Info -->
                        <div style="margin-bottom: 20px; font-size: 13px; line-height: 1.6;">
                            <div>
                                <strong>Report Number:</strong>
                                <span t-esc="doc.report_number or 'N/A'"/>
                            </div>
                            <div>
                                <strong>Customer:</strong>
                                <span t-esc="doc.partner_id.name or 'N/A'"/>
                            </div>
                            <div>
                                <strong>Date:</strong>
                                <span t-esc="doc.create_date.strftime('%Y-%m-%d') if doc.create_date else 'N/A'"/>
                            </div>
                        </div>

                        <!-- Table -->
                        <table style="width:100%; border-collapse: collapse; font-size: 11px;" class="table table-sm table-bordered">
                            <thead>
                                <tr style="background-color: #e8e8e8; color: #333; border: 1px solid #ccc;">
                                    <th style="padding: 6px; text-align: left; border: 1px solid #ccc;">Description</th>
                                    <th style="padding: 6px; text-align: right; border: 1px solid #ccc;">Unit Price</th>
                                    <th style="padding: 6px; text-align: right; border: 1px solid #ccc;">Quantity</th>
                                    <th style="padding: 6px; text-align: right; border: 1px solid #ccc;">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.merged_line_ids" t-as="line">
                                    <tr>
                                        <t t-if="line.name and line.name.startswith('Total for')">
                                            <td colspan="3" style="padding: 6px; font-weight: bold; border: 1px solid #ccc;">
                                                <t t-esc="line.name"/>
                                            </td>
                                            <td style="padding: 6px; text-align: right; font-weight: bold; border: 1px solid #ccc;">
                                                <t t-esc="line.line_total"/>
                                            </td>
                                        </t>
                                        <t t-elif="line.name and line.name.startswith('Total')">
                                            <td colspan="2" style="padding: 6px; font-weight: bold; border: 1px solid #ccc;">
                                                <t t-esc="line.name"/>
                                            </td>
                                            <td style="padding: 6px; text-align: right; font-weight: bold; border: 1px solid #ccc;">
                                                <t t-esc="line.quantity"/>
                                            </td>
                                            <td style="padding: 6px; text-align: right; font-weight: bold; border: 1px solid #ccc;">
                                                <t t-esc="line.line_total"/>
                                            </td>
                                        </t>
                                        <t t-else="">
                                            <td style="padding: 6px; border: 1px solid #ccc;">
                                                <t t-esc="line.name or ''"/>
                                            </td>
                                            <td style="padding: 6px; text-align: right; border: 1px solid #ccc;">
                                                <t t-esc="line.price_unit or 0.0"/>
                                            </td>
                                            <td style="padding: 6px; text-align: right; border: 1px solid #ccc;">
                                                <t t-esc="line.quantity or 0.0"/>
                                            </td>
                                            <td style="padding: 6px; text-align: right; border: 1px solid #ccc;">
                                                <t t-esc="line.line_total or 0.0"/>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <br/><br/>
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>
