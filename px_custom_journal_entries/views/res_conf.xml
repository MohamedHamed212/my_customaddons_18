<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_res_config_settings_inherit_px_custom_journal_entries" model="ir.ui.view">
        <field name="name">res.config.settings.inherit.px_custom_journal_entries</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='account_reports_settings']" position="inside">
                <div class="row mt16 o_setting_box">
                    <div class="col-12 col-lg-6">
                        <field name="account_tax_periodicity_journal_id"/>
                        <field name="account_tax_periodicity"/>
                        <field name="account_tax_periodicity_reminder_day"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
