<odoo>
    <record id="view_res_config_settings_inherit_px_custom_journal_entries" model="ir.ui.view">
        <field name="name">res.config.settings.inherit.px_custom_journal_entries</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <field name="account_tax_periodicity"/>
                <field name="account_tax_periodicity_reminder_day"/>
                <field name="account_tax_periodicity_journal_id"/>
                <field name="totals_below_sections"/>
                <field name="account_reports_show_per_company_setting"/>
            </xpath>
        </field>
    </record>
</odoo>
