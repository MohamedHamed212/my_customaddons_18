<record id="res_config_settings_view_form_inherit_tax" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.tax.inherit</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="arch" type="xml">
        <xpath expr="//div[hasclass('settings')]//div[hasclass('app_settings_block')]" position="inside">
            <div class="setting" >
                <label for="account_tax_periodicity_journal_id"/>
                <div>
                    <field name="account_tax_periodicity_journal_id" options="{'no_create': True}"/>
                </div>
            </div>
        </xpath>
    </field>
</record>
