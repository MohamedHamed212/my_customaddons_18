<odoo>
  <template id="portal_leave_detail_template" name="Leave Detail Page">
    <t t-call="portal.portal_layout">
      <div class="container my-5">
        <h2 class="text-center mb-4">Leave Details</h2>
        <table class="table table-bordered w-75 mx-auto">
          <tr>
            <th>Leave Type</th>
            <td><t t-esc="leave.holiday_status_id.name"/></td>
          </tr>
          <tr>
            <th>Start Date</th>
            <td><t t-esc="leave.request_date_from"/></td>
          </tr>
          <tr>
            <th>End Date</th>
            <td><t t-esc="leave.request_date_to"/></td>
          </tr>
          <tr>
            <th>Number of Days</th>
            <td><t t-esc="leave.number_of_days"/></td>
          </tr>
          <tr>
            <th>Status</th>
            <td>
              <span t-if="leave.state == 'confirm'" class="badge bg-warning text-dark">To Approve</span>
              <span t-if="leave.state == 'validate'" class="badge bg-success">Approved</span>
              <span t-if="leave.state == 'refuse'" class="badge bg-danger">Refused</span>
              <span t-if="leave.state not in ['confirm', 'validate', 'refuse']" class="badge bg-secondary">
                <t t-esc="leave.state"/>
              </span>
            </td>
          </tr>
          <tr>
            <th>Description</th>
            <td><t t-esc="leave.name"/></td>
          </tr>
        </table>
        <div class="text-center mt-4">
          <a href="/my/leaves" class="btn btn-secondary">Back to Leaves</a>
        </div>
      </div>
    </t>
  </template>
</odoo>
