<odoo>
  <!--  My Payrolls -->
  <template id="portal_my_home_inherit_employee_card_payrolls" inherit_id="portal.portal_my_home">
    <xpath expr="//div[@id='portal_common_category']" position="inside">
      <t t-call="portal.portal_docs_entry">
        <t t-set="title">My Payrolls</t>
        <t t-set="text">My Payrolls</t>
        <t t-set="url" t-value="'/my/employee'"/>
        <t t-set="config_card" t-value="True"/>
      </t>
    </xpath>
  </template>

